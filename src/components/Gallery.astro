---
// src/components/Gallery2.astro
import gal01 from '../assets/gal01.jpeg';
import gal02 from '../assets/gal02.jpeg';
import gal03 from '../assets/gal03.jpeg';
import gal04 from '../assets/gal04.jpeg';
import gal05 from '../assets/gal05.jpeg';
import gal06 from '../assets/gal06.jpeg';

const verticalImages = [gal01.src, gal02.src, gal03.src];
const horizontalImages = [gal04.src, gal05.src, gal06.src];
---

<section id="gallery2" class="py-20 bg-white">
  <div class="container mx-auto px-6">
    <h2 class="text-4xl font-bold text-center text-olive-dark mb-12">Nuestra Galería</h2>
    
    <!-- Fila de Imágenes Verticales -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
      {verticalImages.map((image, index) => (
        <div class="overflow-hidden rounded-lg shadow-lg transform hover:scale-105 transition-transform duration-300 aspect-[9/16]">
          <img src={image} alt={`Galería Vertical ${index + 1}`} class="w-full h-full object-cover" />
        </div>
      ))}
    </div>

    <!-- Fila de Imágenes Horizontales -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      {horizontalImages.map((image, index) => (
        <div class="overflow-hidden rounded-lg shadow-lg transform hover:scale-105 transition-transform duration-300 aspect-[16/9]">
          <img src={image} alt={`Galería Horizontal ${index + 1}`} class="w-full h-full object-cover" />
        </div>
      ))}
    </div>

  </div>
</section>