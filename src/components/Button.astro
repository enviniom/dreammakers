---
interface Props {
  href: string;
  text: string;
  variant?: "primary" | "secondary";
  className?: string;
  style?: string;
}

const { href, text, variant = "primary", className, style } = Astro.props;

const variants = {
  primary: "bg-white/10 hover:bg-white/20 text-white backdrop-blur-sm",
  secondary: "bg-accent hover:bg-accent/90 text-white",
};

const baseClasses = "px-8 py-3 rounded-full transition-colors duration-300 animate-slide-up";
---
<a
  href={href}
  style={style}
  class:list={[baseClasses, variants[variant], className]}
>
  {text}
</a>